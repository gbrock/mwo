{
	"name": "gbrock/mwo",
	"description": "Middleware Organizer - Get things together, man.",
	"keywords": [],
	"license": "MIT",
	"type": "project",
	"require": {
		"components/jquery": "1.*",
		"laravel/framework": "4.2.*",
    	"twbs/bootstrap": "3.3.*",
    	"fortawesome/font-awesome": "4.2.*",
		"oyejorge/less.php": "~1.5",
		"davejamesmiller/laravel-breadcrumbs": "~2.3"
	},
	"autoload": {
		"classmap": [
			"app/commands",
			"app/controllers",
			"app/models",
			"app/database/migrations",
			"app/database/seeds",
			"app/tests/TestCase.php"
		]
	},
	"scripts": {
		"post-install-cmd": [
			"php artisan clear-compiled",
			"php artisan optimize"
		],
		"post-update-cmd": [
			"php artisan clear-compiled",
			"php artisan optimize"
		],
		"post-create-project-cmd": [
			"php artisan key:generate"
		]
	},
	"config": {
		"preferred-install": "dist"
	}
}
